---
import Base from "./Base.astro";

interface Props {
  title: string;
  description?: string;
  date: string;
  author: string;
}

const { title, description, date, author } = Astro.props;
const formatted = new Date(date + "T00:00:00Z").toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
  timeZone: "UTC",
});
---

<Base title={`${title} - OpenSeed Blog`} description={description}>
  <header class="blog-header">
    <div class="max-w-3xl mx-auto px-6">
      <a href="/blog" class="inline-block text-sm text-text-tertiary hover:text-text-secondary transition-colors">&larr; All posts</a>
      <h1 class="blog-title">{title}</h1>
      {description && (
        <p class="blog-lede">{description}</p>
      )}
      <div class="blog-meta">
        <span>{author}</span>
        <span class="meta-dot"></span>
        <time datetime={date}>{formatted}</time>
      </div>
    </div>
  </header>

  <article class="max-w-3xl mx-auto px-6 pb-20">
    <div class="prose-openseed">
      <slot />
    </div>

    <footer class="blog-footer">
      <a href="/blog" class="text-sm text-text-tertiary hover:text-text-secondary transition-colors">&larr; All posts</a>
    </footer>
  </article>
</Base>

<style is:global>
  .blog-header {
    padding-top: 5rem;
    padding-bottom: 4rem;
    background: linear-gradient(180deg, var(--color-surface) 0%, var(--color-bg) 100%);
    border-bottom: 1px solid var(--color-border);
    border-top: 2px solid color-mix(in srgb, var(--color-alive) 40%, transparent);
    margin-bottom: 3rem;
  }

  .blog-title {
    margin-top: 1.5rem;
    font-family: var(--font-display);
    font-size: clamp(2.25rem, 5.5vw, 3.25rem);
    font-weight: 500;
    letter-spacing: -0.02em;
    line-height: 1.15;
    color: var(--color-text);
  }

  .blog-lede {
    margin-top: 1.5rem;
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text);
    max-width: 50ch;
  }

  .blog-meta {
    margin-top: 2rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
  }

  .meta-dot {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: var(--color-border-accent);
  }

  .blog-footer {
    margin-top: 5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .prose-openseed {
    max-width: 65ch;
    font-size: 1.0625rem;
  }
  .prose-openseed h1 {
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }
  .prose-openseed h2 {
    font-size: 1.625rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-top: 3.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }
  .prose-openseed h3 {
    font-size: 1.1875rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }
  .prose-openseed p {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 1.25rem;
  }
  .prose-openseed a {
    color: var(--color-accent);
    text-decoration: none;
    text-underline-offset: 3px;
  }
  .prose-openseed a:hover {
    text-decoration: underline;
  }
  .prose-openseed ul, .prose-openseed ol {
    color: var(--color-text-secondary);
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
    line-height: 1.8;
  }
  .prose-openseed li {
    margin-bottom: 0.375rem;
  }
  .prose-openseed strong {
    color: var(--color-text);
    font-weight: 600;
  }
  .prose-openseed em {
    color: var(--color-text-secondary);
    font-style: italic;
  }
  .prose-openseed code {
    font-family: var(--font-mono);
    font-size: 0.85em;
    background: var(--color-surface);
    padding: 0.2em 0.45em;
    border-radius: 0.25rem;
    border: 1px solid var(--color-border);
    color: var(--color-text);
  }
  .prose-openseed pre {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-bottom: 1.75rem;
    overflow-x: auto;
  }
  .prose-openseed pre code {
    background: none;
    padding: 0;
    border: none;
    font-size: 0.8125rem;
    line-height: 1.7;
  }
  .prose-openseed blockquote {
    border-left: 3px solid var(--color-alive);
    padding-left: 1.25rem;
    margin: 2rem 0;
    color: var(--color-text-secondary);
    font-style: italic;
  }
  .prose-openseed hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 3.5rem 0;
  }
  .prose-openseed table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.75rem;
    font-size: 0.875rem;
  }
  .prose-openseed th {
    text-align: left;
    padding: 0.625rem 0.75rem;
    border-bottom: 1px solid var(--color-border-accent);
    color: var(--color-text);
    font-weight: 600;
  }
  .prose-openseed td {
    padding: 0.625rem 0.75rem;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }
</style>
