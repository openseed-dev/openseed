---
import Base from "../layouts/Base.astro";
import Terminal from "../components/Terminal.astro";

const bundled = [
  {
    name: "dreamer",
    description: "Full cognitive architecture: dreams, memory consolidation, self-evaluation, fatigue, persistent browser.",
    tags: ["memory", "dreams", "self-modification", "browser"],
    status: "bundled",
  },
  {
    name: "minimal",
    description: "Bare-bones loop with bash and sleep. No scaffolding. The creature discovers everything on its own.",
    tags: ["minimal", "emergent", "blank-slate"],
    status: "bundled",
  },
];
---

<Base title="Genome Marketplace - OpenSeed" description="Discover and share cognitive blueprints for autonomous AI creatures.">

  <section class="relative overflow-hidden">
    <div class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] rounded-full bg-alive/5 blur-[120px] pointer-events-none"></div>

    <div class="max-w-4xl mx-auto px-6 pt-24 pb-16 relative">
      <p class="text-xs uppercase tracking-widest text-text-tertiary mb-4 text-center">Coming Soon</p>
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-center leading-[1.1]">
        Genome Marketplace
      </h1>
      <p class="mt-6 text-lg text-text-secondary text-center max-w-2xl mx-auto leading-relaxed">
        Discover, share, and install cognitive blueprints for your creatures.
        Every genome defines a different kind of mind.
      </p>
    </div>
  </section>

  <!-- Bundled genomes -->
  <section class="pb-16 border-t border-border" data-reveal>
    <div class="max-w-4xl mx-auto px-6 pt-16">
      <h2 class="text-2xl font-bold tracking-tight">Bundled Genomes</h2>
      <p class="mt-2 text-text-secondary text-sm">Ship with OpenSeed. Ready to use out of the box.</p>

      <div class="grid sm:grid-cols-2 gap-6 mt-8">
        {bundled.map((g) => (
          <div class="rounded-lg border border-border bg-surface p-6 space-y-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold">{g.name}</h3>
              <span class="text-xs px-2 py-0.5 rounded-full border border-alive/30 text-alive bg-alive/5">{g.status}</span>
            </div>
            <p class="text-text-secondary text-sm leading-relaxed">{g.description}</p>
            <div class="flex flex-wrap gap-2">
              {g.tags.map((tag) => (
                <span class="text-xs px-2 py-0.5 rounded bg-bg text-text-tertiary border border-border">{tag}</span>
              ))}
            </div>
            <div class="font-mono text-xs text-text-tertiary">
              seed spawn my-creature --genome {g.name}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Coming soon -->
  <section class="py-24 border-t border-border" data-reveal>
    <div class="max-w-3xl mx-auto px-6 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-border bg-surface text-sm text-text-secondary mb-8">
        <span class="w-2 h-2 rounded-full bg-dormant animate-pulse"></span>
        In development
      </div>

      <h2 class="text-3xl font-bold tracking-tight">Community genomes are coming</h2>
      <p class="mt-4 text-text-secondary text-lg max-w-xl mx-auto leading-relaxed">
        A searchable directory of community-built genomes. Browse by category, install with one command,
        and publish your own cognitive blueprints for others to use.
      </p>

      <div class="mt-12 max-w-md mx-auto">
        <Terminal title="terminal">
          <div><span class="text-alive">$</span> <span class="text-text-secondary">seed genome search trading</span></div>
          <div class="mt-2 space-y-1">
            <div><span class="text-text">crypto-dreamer</span> <span class="text-text-tertiary">- Dreamer with crypto trading tools</span></div>
            <div><span class="text-text">market-watcher</span> <span class="text-text-tertiary">- Monitors equities + macro news</span></div>
            <div><span class="text-text">quant-minimal</span> <span class="text-text-tertiary">- Bare-bones quantitative analysis</span></div>
          </div>
          <div class="mt-3"><span class="text-alive">$</span> <span class="text-text-secondary">seed genome install jdoe/crypto-dreamer</span></div>
          <div class="text-text-tertiary">installed genome "crypto-dreamer" (v1.2.0)</div>
        </Terminal>
      </div>

      <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/docs/genomes"
          class="inline-flex items-center gap-2 px-5 py-2.5 rounded-md bg-alive text-bg font-medium text-sm hover:bg-alive/90 transition-colors"
        >
          Read the genome docs
        </a>
        <a
          href="https://x.com/rsdgls"
          class="inline-flex items-center gap-2 px-5 py-2.5 rounded-md border border-border text-text-secondary text-sm hover:text-text hover:border-border-accent transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          Follow for updates &rarr;
        </a>
      </div>
    </div>
  </section>

</Base>
